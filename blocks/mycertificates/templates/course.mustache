{{!
    @template block_mycertificates/custom_menu_footer

    Custom menu footer template

    Example context (json):
    {
        "hascertificates": "true",
        "coursescertificates": [
            {
                "courseid": 2,
                "shortname": "Course #1",
                "fullname": "Course #1 fullname",
                "certificates": [{
                        "name": "Certificate name",
                        "module": "simplecertificate",
                        "url": "https://link.com"
                }]
            }
        ]
    }
}}
{{#hascertificates}}
    {{#coursescertificates}}
        {{#certificates}}
            <p><a target="_blank" href="{{ downloadurl }}">{{# pix }} icon, {{{ module }}} {{/ pix }} {{{ name }}}</a></p>
        {{/certificates}}
    {{/coursescertificates}}
{{/hascertificates }}
{{^hascertificates}}
    <p class="alert alert-info">{{#str}}nohavecertificates, block_mycertificates{{/str}}</p>
{{/hascertificates}}